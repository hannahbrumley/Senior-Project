<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wellness_Wizards_App.CreateNewDeckTemplate">
    
    <StackLayout>
        <Frame BackgroundColor="White" Padding="10" CornerRadius="0" HasShadow="True" HeightRequest="75">
        <Grid ColumnSpacing="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <!-- For the image -->
                    <ColumnDefinition Width="*"/>
                    <!-- Adjusted for the label -->
                </Grid.ColumnDefinitions>
                <!-- Image to the left -->
            <Image Source="gold_logo.png" Grid.Column="0" HeightRequest="50" WidthRequest="50" Aspect="AspectFit" VerticalOptions="Center"/>
            
             <!-- Enter title for new deck -->
                <Entry Placeholder="Title for new deck" Grid.Column="2"/>
            </Grid>
    </Frame>
        <!-- Close pop up page button -->
        <Button Text="Close" Margin="10" Clicked="OnCloseClicked" BackgroundColor="{StaticResource AppAccentMain}" TextColor="Black" FontFamily="klavika" HeightRequest="40" WidthRequest="100" HorizontalOptions="End"/>
    </StackLayout>
</ContentPage>